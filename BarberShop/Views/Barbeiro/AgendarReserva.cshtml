@model BarberShop.Models.modelReserva

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agendar - BarberShop</title>
    <style>
        :root {
            --white: #fff;
            --redBorder: #f030010;
            --redMain: #fd3946;
            --blueButton: #0050f0;
        }

        body {
            margin: 0;
            box-sizing: border-box;
            background-image: linear-gradient(to top, #000 0%, #09203f 100%);
            height: 100vh;
        }

        nav {
            margin: 4% 7%;
            z-index: 6000;
            position: fixed;
            width: 85%;
            height: 80px;
            border-radius: 50px;
            background: var(--white);
            border: solid 3px red;
            transition: 0.5s;
            text-align: center;
        }

        ul {
            list-style: none;
            display: flex;
        }

        .logo {
            margin: -0.5rem 3rem;
            width: 4em;
            transition: 0.5s;
        }

        a {
            width: 25rem;
            margin: 1%;
            text-decoration: none;
        }

        li {
            color: black;
            text-decoration: none;
            font: bold 12pt Segoe UI;
        }

        section {
            background: none;
            position: absolute;
            margin: 12% 27%;
            justify-content: center;
            width: 45%;
            height: 45%;
            display: flex;
            border-radius: 10px;
        }

        .campoList {
            border: none;
            width: 31vw;
            padding: 20px;
            margin-top: 1em;
            border-radius: 30px;
        }

        .campo {
            border: none;
            width: 28vw;
            padding: 20px;
            margin-top: 1em;
            border-radius: 30px;
        }

            .campo:focus, .campoList:focus {
                border: solid 3px red;
                outline: none;
            }

        .buttonAgendar {
            margin: 10% 30%;
            font: bold 12pt Segoe UI;
            background: var(--blueButton);
            text-align: center;
            width: 10rem;
            border: none;
            border-radius: 10px;
            padding-top: 4%;
            padding-bottom: 4%;
            color: var(--white);
            cursor: pointer;
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: flex;
            color: var(--white);
            background: #fd3946;
            border-top-right-radius: 15px;
            border-top-left-radius: 15px;
            z-index: 1000;
        }

            footer p {
                font: bold 16pt Segoe UI;
                margin: 0.5em 5.2em;
            }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li><img class="logo" src="~/fonts/logo_semFundo.png"></li>
            <a href="AgendarReserva" title="Agendar"><li>AGENDAR</li></a>
            <a href="VerReserva" title="Consultar"><li>CONSULTAR AGENDAMENTO</li></a>
            <a href="../Login/Login" title="Sair"><li>SAIR</li></a>
        </ul>
    </nav>
    <section>
        @using (Html.BeginForm("AgendarReserva"))
        {
            <div class="editor-field">
                @Html.DropDownList("cliente", ViewBag.cliente as List<SelectListItem>, "NOME DO CLIENTE", new { @class = "campoList" })
            </div>
            <div class="editor-field">
                @Html.DropDownList("barbeiro", ViewBag.barbeiro as List<SelectListItem>, "SELECIONE O BARBEIRO", new { @class = "campoList" })
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.data_reserva, new { htmlAttributes = new { @type = "date", @class = "campo", @placeholder = "Data" } })
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.hora, new { htmlAttributes = new { @type = "time", @class = "campo", @placeholder = "Hora" } })
            </div>
            <input type="submit" value="AGENDAR" class="buttonAgendar" />
            <span style="color: white; font:bold 14pt Segoe UI; display: flex; margin-top:-10%;">@ViewBag.msg</span>
        }
    </section>
    <footer>
        <p>Rua Atlanta - 15, Osasco-SP</p>
        <p class="text-copy" style="font-style: italic">&copy;BarberShop</p>
        <p>1133651651</p>
    </footer>
</body>
</html>
